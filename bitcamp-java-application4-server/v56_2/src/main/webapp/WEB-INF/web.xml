<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	version="4.0" metadata-complete="false">

	<description>
        자바 웹 애플리케이션4 프로젝트
  </description>

	<display-name>bitcamp-java-application4</display-name>

	<!-- 모든 서블릿이 공유하는 파라미터라면! => 리스너에서 쓸 예정 -->
	<context-param>
		<param-name>contextClass</param-name>
		<param-value>org.springframework.context.annotation.AnnotationConfigApplicationContext</param-value>
	</context-param>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>com.eomcs.lms.config</param-value>
	</context-param>

	<listener>
		<listener-class>com.eomcs.lms.listener.ContextLoaderListener</listener-class>

	</listener>

	<filter>
		<filter-name>CharacterEncodingFilter</filter-name>
		<filter-class>com.eomcs.lms.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>CharacterEncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

</web-app>









